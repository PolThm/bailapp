{
  "color-highlight.matchHslWithNoFunction": true,
  
  // Automatic formatting on save
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  
  // Use Prettier for specific files
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  // Automatic correction on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  
  // ESLint configuration - Real-time error display
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Run ESLint in real-time as you type
  "eslint.run": "onType",
  // Always show ESLint status
  "eslint.alwaysShowStatus": true,
  // Show problems panel
  "problems.showCurrentInStatus": true,
  // Enable ESLint working directories
  "eslint.workingDirectories": [
    {
      "pattern": "."
    }
  ],
  
  // Prettier configuration - Real-time error display
  "prettier.enable": true,
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  
  // Editor visual feedback for errors
  "editor.renderValidationDecorations": "on",
  "editor.codeLens": true,
  // Show errors in gutter
  "editor.gutter": true,
  // Problem colors
  "workbench.colorCustomizations": {
    "editorError.foreground": "#f14c4c",
    "editorWarning.foreground": "#cca700",
    "editorInfo.foreground": "#75beff"
  }
}