#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Only bump version on main branch
current_branch=$(git rev-parse --abbrev-ref HEAD)
if [ "$current_branch" = "main" ]; then
  echo "On main branch, bumping version..."
  node scripts/bump-version.js
  git add package.json apps/web/package.json apps/web/src/pages/Profile.tsx
else
  echo "Not on main branch ($current_branch), skipping version bump"
fi
