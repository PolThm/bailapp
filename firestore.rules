rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles
      allow read: if true;
      // Only the user can create/update their own profile
      allow create, update: if isOwner(userId);
      // Users can delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // Choreographies collection (one document per user)
    match /choreographies/{userId} {
      // Only the user can read their own choreographies
      allow read: if isOwner(userId);
      // Only the user can create/update their own choreographies document
      allow create, update: if isOwner(userId);
      // Users can delete their own choreographies document
      allow delete: if isOwner(userId);
    }
    
    // Dance moves library (public read, admin write)
    match /danceMoves/{moveId} {
      // Anyone can read dance moves
      allow read: if true;
      // Only admins can create/update/delete (you can implement custom claims for admin)
      allow write: if false; // For now, manage via Firebase Console
    }
    
    // User progress tracking
    match /progress/{userId} {
      // Only the user can read their own progress
      allow read: if isOwner(userId);
      // Only the user can update their own progress
      allow create, update: if isOwner(userId);
      // Users can delete their own progress
      allow delete: if isOwner(userId);
    }
    
    // User favorites (includes figureIds, lastOpenedAt, and masteryLevels)
    match /favorites/{userId} {
      // Only the user can read their own favorites
      allow read: if isOwner(userId);
      // Only the user can create/update their own favorites
      allow create, update: if isOwner(userId);
      // Users can delete their own favorites
      allow delete: if isOwner(userId);
    }
  }
}

